<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="10dp"
    android:descendantFocusability="blocksDescendants">

    <TableLayout
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TableRow
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nombreLista"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="@string/nombre_pizza_1"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/background_light" />
    </TableRow>

    <TableRow
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imagenLista"
            style="@style/BotonInvisible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:contentDescription=""
            android:cropToPadding="false"
            app:srcCompat="@mipmap/campina"
            />

        <TextView
            android:id="@+id/descripcionLista"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:text="@string/descripcion_de_la_pizza_1"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/precioLista"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="10dp"
            android:text="@string/precio_pizza_1"
            android:textAlignment="textEnd"
            android:textColor="@android:color/darker_gray" />

    </TableRow>
    </TableLayout>
</RelativeLayout>